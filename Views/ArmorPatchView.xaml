<UserControl x:Class="Boutique.Views.ArmorPatchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:Boutique.Views"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="1200">
    <Grid Margin="0,0,0,6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <views:SettingsPanelView Grid.Row="0" Margin="0,0,0,4" DataContext="{Binding}" />

        <GroupBox Grid.Row="1" Header="Plugin Selection" Padding="6" Margin="0,0,0,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0">
                    <TextBlock Text="Source Plugin (Glam Mod)" FontWeight="SemiBold" Margin="0,0,0,2" />
                    <ComboBox ItemsSource="{Binding AvailablePlugins}"
                              SelectedItem="{Binding SelectedSourcePlugin}"
                              IsEditable="True"
                              IsTextSearchEnabled="True"
                              StaysOpenOnEdit="True"
                              IsTextSearchCaseSensitive="False"
                              ToolTip="Type to search plugins" />
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="0">
                    <TextBlock Text="Target Plugin (Stats Source)" FontWeight="SemiBold" Margin="0,0,0,2" />
                    <ComboBox ItemsSource="{Binding AvailablePlugins}"
                              SelectedItem="{Binding SelectedTargetPlugin}"
                              IsEditable="True"
                              IsTextSearchEnabled="True"
                              StaysOpenOnEdit="True"
                              IsTextSearchCaseSensitive="False"
                              ToolTip="Type to search plugins" />
                </StackPanel>
            </Grid>
        </GroupBox>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="6" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="Source Armors (Glam Mod)" Padding="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,4,0" />
                        <TextBox Width="200"
                                 Text="{Binding SourceSearchText, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Text="{Binding SourceArmors.Count, StringFormat='{}{0} armors'}"
                                   Margin="8,0,0,0" VerticalAlignment="Center" />
                    </StackPanel>

                    <DataGrid x:Name="SourceArmorsGrid"
                              Grid.Row="1"
                              ItemsSource="{Binding SourceArmorsView}"
                              SelectionChanged="SourceArmorsGrid_SelectionChanged"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Extended"
                              CanUserSortColumns="True"
                              EnableRowVirtualization="True"
                              EnableColumnVirtualization="True"
                              ScrollViewer.CanContentScroll="True"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMapped}" Value="True">
                                        <Setter Property="Background" Value="#FFE6F4EA" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Width="*" IsReadOnly="True">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="DisplayName" Mode="OneWay" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Slots" Width="130" IsReadOnly="True">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="SlotSummary" Mode="OneWay" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Form ID" Width="120" IsReadOnly="True"
                                                SortMemberPath="FormIdSortable">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="FormIdDisplay" Mode="OneWay" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Mod" Width="150" IsReadOnly="True">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="ModDisplayName" Mode="OneWay" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>

            <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Stretch" Background="LightGray" />

            <GroupBox Grid.Column="2" Header="Target Armors (Stats Source)" Padding="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,4,0" />
                            <TextBox Width="200"
                                     Text="{Binding TargetSearchText, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Text="{Binding TargetArmors.Count, StringFormat='{}{0} candidates'}"
                                       Margin="8,0,0,0" VerticalAlignment="Center" />
                        </StackPanel>

                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <Button Content="Map Selection" Command="{Binding MapSelectedCommand}" />
                            <Button Content="Mark Glam Only" Command="{Binding MapGlamOnlyCommand}" />
                            <TextBlock Text="{Binding Matches.Count, StringFormat='{}{0} mappings'}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Grid>

                    <DataGrid x:Name="TargetArmorsGrid"
                              Grid.Row="1"
                              ItemsSource="{Binding TargetArmorsView}"
                              SelectedItem="{Binding SelectedTargetArmor, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              CanUserSortColumns="True"
                              EnableRowVirtualization="True"
                              EnableColumnVirtualization="True"
                              ScrollViewer.CanContentScroll="True"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling"
                              Sorting="TargetArmorsDataGrid_Sorting">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="IsEnabled" Value="{Binding IsSlotCompatible}" />
                                <Setter Property="Opacity"
                                        Value="{Binding IsSlotCompatible, Converter={StaticResource BooleanToOpacityConverter}}" />
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Width="*" IsReadOnly="True">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="DisplayName" Mode="OneWay" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Slots" Width="130" IsReadOnly="True">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="SlotSummary" Mode="OneWay" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Form ID" Width="120" IsReadOnly="True"
                                                SortMemberPath="FormIdSortable">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="FormIdDisplay" Mode="OneWay" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Mod" Width="150" IsReadOnly="True">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="ModDisplayName" Mode="OneWay" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Armor" Width="80" IsReadOnly="True">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="ArmorRating" Mode="OneWay" />
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
        </Grid>

        <GroupBox Grid.Row="3" Header="Mapping Preview" Padding="6" Margin="0,4,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding Matches.Count, StringFormat='{}{0} total mappings'}"
                               FontWeight="Bold"
                               VerticalAlignment="Center" />
                    <Button Grid.Column="1"
                            Content="Clear"
                            Command="{Binding ClearMappingsCommand}"
                            Visibility="{Binding Matches.Count, Converter={StaticResource BoolToVisConverter}}" />
                </Grid>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Matches}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="2" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#FFE0E0E0"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="6"
                                        Margin="0,0,8,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Source.DisplayName}" FontWeight="Bold" />
                                            <TextBlock Text="{Binding Source.SlotSummary}" />
                                            <TextBlock Text="{Binding Source.FormIdDisplay}" Foreground="Gray" />
                                            <TextBlock Text="{Binding Source.ModDisplayName}" Foreground="Gray" />
                                        </StackPanel>

                                        <TextBlock Grid.Column="1"
                                                   Text="->"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Margin="4,0"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center" />

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="{Binding Target.DisplayName}" FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="Not mapped" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Target}" Value="{x:Null}">
                                                                <Setter Property="Foreground" Value="Gray" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsGlamOnly}" Value="True">
                                                                <Setter Property="Foreground" Value="Gray" />
                                                                <Setter Property="Text"
                                                                        Value="? Glam-only (right side not needed)" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock>
                                                <Run Text="Slots: " />
                                                <Run>
                                                    <Run.Text>
                                                        <Binding Path="Target.SlotSummary"
                                                                 TargetNullValue="-"
                                                                 Mode="OneWay" />
                                                    </Run.Text>
                                                </Run>
                                            </TextBlock>
                                            <TextBlock>
                                                <Run Text="Armor: " />
                                                <Run>
                                                    <Run.Text>
                                                        <Binding Path="Target.ArmorRating"
                                                                 Mode="OneWay"
                                                                 StringFormat="{}{0:F1}"
                                                                 TargetNullValue="-" />
                                                    </Run.Text>
                                                </Run>
                                                <Run Text="  |  Value: " />
                                                <Run>
                                                    <Run.Text>
                                                        <Binding Path="Target.Value"
                                                                 Mode="OneWay"
                                                                 StringFormat="{}{0}"
                                                                 TargetNullValue="-" />
                                                    </Run.Text>
                                                </Run>
                                            </TextBlock>
                                            <TextBlock Foreground="Gray">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsGlamOnly}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Target}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                                <Run>
                                                    <Run.Text>
                                                        <Binding Path="Target.FormIdDisplay"
                                                                 Mode="OneWay"
                                                                 TargetNullValue="" />
                                                    </Run.Text>
                                                </Run>
                                                <Run Text="  |  " />
                                                <Run>
                                                    <Run.Text>
                                                        <Binding Path="Target.ModDisplayName"
                                                                 Mode="OneWay"
                                                                 TargetNullValue="" />
                                                    </Run.Text>
                                                </Run>
                                            </TextBlock>
                                            <TextBlock Foreground="Gray">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsGlamOnly}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                                <Run Text="? Glam-only mapping will zero the armor rating in the patch" />
                                            </TextBlock>
                                        </StackPanel>

                                        <Button Grid.Column="3"
                                                Content="Remove"
                                                Margin="6,0,0,0"
                                                VerticalAlignment="Center"
                                                Command="{Binding DataContext.RemoveMappingCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </GroupBox>
        <Grid Grid.Row="4" Margin="0,6,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       Text="{Binding Matches.Count, StringFormat='{}{0} mapping(s) queued'}"
                       VerticalAlignment="Center" />
            <Button Grid.Column="1" Content="Create Patch" Command="{Binding CreatePatchCommand}"
                    IsEnabled="{Binding IsPatching, Converter={StaticResource InverseBoolConverter}}"
                    Padding="12,6" FontSize="13" FontWeight="Bold" HorizontalAlignment="Right" />
        </Grid>
    </Grid>
</UserControl>
