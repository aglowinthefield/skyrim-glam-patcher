<Window x:Class="Boutique.Views.OutfitPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helix="clr-namespace:HelixToolkit.Wpf.SharpDX;assembly=HelixToolkit.Wpf.SharpDX"
        Title="Outfit Preview"
        Width="900"
        Height="700"
        WindowStartupLocation="CenterOwner"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <helix:Viewport3DX x:Name="PreviewViewport"
                           Grid.Row="0"
                           ClipToBounds="True"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Focusable="True"
                           ShowCoordinateSystem="False"
                           ShowFrameRate="False"
                           EnableCursorPosition="False"
                           UseDefaultGestures="True" />

        <Border Grid.Row="1"
                Background="#22000000"
                Padding="12"
                BorderThickness="0">
            <StackPanel>
                <StackPanel x:Name="MissingAssetsPanel"
                            Margin="0,0,0,8">
                    <TextBlock Text="Missing assets:" FontWeight="Bold" />
                    <ItemsControl x:Name="MissingAssetsList" Margin="0,4,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" TextWrapping="Wrap" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <Expander
                  Header="Lighting multipliers (Debug)"
                          IsExpanded="False"
                          Margin="0,0,0,12">
                    <Grid Margin="0,6,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Ambient" Margin="0,0,8,0"
                                   VerticalAlignment="Center" />
                        <Slider x:Name="AmbientMultiplierSlider"
                                Grid.Row="0"
                                Grid.Column="1"
                                Minimum="0"
                                Maximum="5"
                                Value="0"
                                TickFrequency="0.1"
                                ValueChanged="OnAmbientMultiplierChanged"
                                Margin="0,0,8,0" />
                        <TextBlock Grid.Row="0" Grid.Column="2"
                                   Text="{Binding Value, ElementName=AmbientMultiplierSlider, StringFormat=F2}"
                                   Width="48" VerticalAlignment="Center" TextAlignment="Right" />

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Key/Fill" Margin="0,6,8,0"
                                   VerticalAlignment="Center" />
                        <Slider x:Name="KeyFillMultiplierSlider"
                                Grid.Row="1"
                                Grid.Column="1"
                                Minimum="0"
                                Maximum="5"
                                Value="1.6"
                                TickFrequency="0.1"
                                ValueChanged="OnKeyFillMultiplierChanged"
                                Margin="0,6,8,0" />
                        <TextBlock Grid.Row="1" Grid.Column="2"
                                   Text="{Binding Value, ElementName=KeyFillMultiplierSlider, StringFormat=F2}"
                                   Width="48" VerticalAlignment="Center" TextAlignment="Right" />

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Rim" Margin="0,6,8,0" VerticalAlignment="Center" />
                        <Slider x:Name="RimMultiplierSlider"
                                Grid.Row="2"
                                Grid.Column="1"
                                Minimum="0"
                                Maximum="5"
                                Value="1"
                                TickFrequency="0.1"
                                ValueChanged="OnRimMultiplierChanged"
                                Margin="0,6,8,0" />
                        <TextBlock Grid.Row="2" Grid.Column="2"
                                   Text="{Binding Value, ElementName=RimMultiplierSlider, StringFormat=F2}" Width="48"
                                   VerticalAlignment="Center" TextAlignment="Right" />

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Frontal" Margin="0,6,8,0"
                                   VerticalAlignment="Center" />
                        <Slider x:Name="FrontalMultiplierSlider"
                                Grid.Row="3"
                                Grid.Column="1"
                                Minimum="0"
                                Maximum="10"
                                Value="7"
                                TickFrequency="0.1"
                                ValueChanged="OnFrontalMultiplierChanged"
                                Margin="0,6,8,0" />
                        <TextBlock Grid.Row="3" Grid.Column="2"
                                   Text="{Binding Value, ElementName=FrontalMultiplierSlider, StringFormat=F2}"
                                   Width="48" VerticalAlignment="Center" TextAlignment="Right" />
                    </Grid>
                </Expander>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Reset View"
                            Margin="0,0,8,0"
                            Padding="14,6"
                            Click="OnResetView" />
                    <Button Content="Close"
                            Padding="14,6"
                            IsCancel="True"
                            Click="OnClose" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
