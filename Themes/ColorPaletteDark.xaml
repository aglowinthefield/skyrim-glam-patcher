<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Dark Theme (Gruvbox / Kanagawa inspired) -->

    <!-- Colors -->
    <Color x:Key="Color.PrimaryBackground">#FF1F1F1F</Color>
    <Color x:Key="Color.PanelBackground">#FF23242A</Color>
    <Color x:Key="Color.CardBackground">#FF353840</Color>
    <Color x:Key="Color.Border">#FF3C3F4B</Color>
    <Color x:Key="Color.Accent">#FF83A598</Color>
    <Color x:Key="Color.AccentMuted">#FF6B8E7D</Color>
    <Color x:Key="Color.Warning">#FFE67E80</Color>
    <Color x:Key="Color.TextPrimary">#FFECE0C8</Color>
    <Color x:Key="Color.TextSecondary">#FFB8B2A7</Color>
    <Color x:Key="Color.TextDisabled">#FF8E897F</Color>

    <!-- Brushes (static, no DynamicResource chain) -->
    <SolidColorBrush x:Key="Brush.PrimaryBackground" Color="#FF1F1F1F" />
    <SolidColorBrush x:Key="Brush.PanelBackground" Color="#FF23242A" />
    <SolidColorBrush x:Key="Brush.CardBackground" Color="#FF353840" />
    <SolidColorBrush x:Key="Brush.Border" Color="#FF3C3F4B" />
    <SolidColorBrush x:Key="Brush.Accent" Color="#FF83A598" />
    <SolidColorBrush x:Key="Brush.AccentMuted" Color="#FF6B8E7D" />
    <SolidColorBrush x:Key="Brush.Warning" Color="#FFE67E80" />
    <SolidColorBrush x:Key="Brush.TextPrimary" Color="#FFECE0C8" />
    <SolidColorBrush x:Key="Brush.TextSecondary" Color="#FFB8B2A7" />
    <SolidColorBrush x:Key="Brush.TextDisabled" Color="#FF8E897F" />

    <!-- Opacity variants -->
    <SolidColorBrush x:Key="Brush.BorderLight" Color="#FF3C3F4B" Opacity="0.5" />
    <SolidColorBrush x:Key="Brush.HighlightOverlay" Color="#FF83A598" Opacity="0.12" />
</ResourceDictionary>
