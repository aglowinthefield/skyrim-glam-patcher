<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Light Theme (Warm paper / parchment inspired) -->

    <!-- Colors -->
    <Color x:Key="Color.PrimaryBackground">#FFF5F0E6</Color>
    <Color x:Key="Color.PanelBackground">#FFFAF7F0</Color>
    <Color x:Key="Color.CardBackground">#FFF0EDE6</Color>
    <Color x:Key="Color.Border">#FFD4CFC4</Color>
    <Color x:Key="Color.Accent">#FF5B8266</Color>
    <Color x:Key="Color.AccentMuted">#FF7A9E85</Color>
    <Color x:Key="Color.Warning">#FFC44D4D</Color>
    <Color x:Key="Color.TextPrimary">#FF2C2A26</Color>
    <Color x:Key="Color.TextSecondary">#FF5C5850</Color>
    <Color x:Key="Color.TextDisabled">#FF9C9890</Color>

    <!-- Brushes (static, no DynamicResource chain) -->
    <SolidColorBrush x:Key="Brush.PrimaryBackground" Color="#FFF5F0E6" />
    <SolidColorBrush x:Key="Brush.PanelBackground" Color="#FFFAF7F0" />
    <SolidColorBrush x:Key="Brush.CardBackground" Color="#FFF0EDE6" />
    <SolidColorBrush x:Key="Brush.Border" Color="#FFD4CFC4" />
    <SolidColorBrush x:Key="Brush.Accent" Color="#FF5B8266" />
    <SolidColorBrush x:Key="Brush.AccentMuted" Color="#FF7A9E85" />
    <SolidColorBrush x:Key="Brush.Warning" Color="#FFC44D4D" />
    <SolidColorBrush x:Key="Brush.TextPrimary" Color="#FF2C2A26" />
    <SolidColorBrush x:Key="Brush.TextSecondary" Color="#FF5C5850" />
    <SolidColorBrush x:Key="Brush.TextDisabled" Color="#FF9C9890" />

    <!-- Opacity variants -->
    <SolidColorBrush x:Key="Brush.BorderLight" Color="#FFD4CFC4" Opacity="0.5" />
    <SolidColorBrush x:Key="Brush.HighlightOverlay" Color="#FF5B8266" Opacity="0.12" />
</ResourceDictionary>
